<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Shopping Cart</h2>
    </div>
  </div>

  <div class="row cart-row">  
    {{#each products}}
    <div class="col-md-3 col-sm-6 product">
      <div class="thumbnail">
        <img src="{{image}}" alt="{{name}}">
        <div class="caption">
          <h3>{{name}}</h3>
          <p class="price">Rs.{{price}}</p>
          <form method="POST" action="/cart/delete/{{_id}}?_method=delete">
            <div class="form-group">
              <div class="btn-group">
                <a href="/products/{{productId}}" class="btn btn-primary" role="button">View</a> 
                <!-- <button class="btn btn-danger" type="submit" value="Submit">Remove</button> -->
              </div>
              <!-- <input type="hidden" value={{quantity}} name="quantity"> -->
            </div>
          </form>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
